<%- include('../partials/header') %>
<form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
    <input type="text" name="skill" value="<%= skill.skill %>" required><br>
    Level: 
    <label class="radio-label">
        <input type="radio" name="level" value="Beginner" class="radio" <%= skill.level === 'Beginner' ? 'checked' : '' %> required>
        Beginner
    </label>
    <label class="radio-label">
        <input type="radio" name="level" value="Intermediate" class="radio" <%= skill.level === 'Intermediate' ? 'checked' : '' %>>
        Intermediate
    </label>
    <label class="radio-label">
        <input type="radio" name="level" value="Advanced" class="radio" <%= skill.level === 'Advanced' ? 'checked' : '' %>>
        Advanced
    </label>
    <br>
    <button type="submit">Edit Skill</button>
</form>
<%- include('../partials/footer') %>